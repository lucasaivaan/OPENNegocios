<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="35dp"
        app:cardElevation="3dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_service_default"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_service_default" />

                <ImageView
                    android:id="@+id/ic_service_24"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_service_24" />

                <ImageView
                    android:id="@+id/ic_service_sube"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_service_sube" />

                <ImageView
                    android:id="@+id/ic_service_carga_movil"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_service_carga_movil" />

                <ImageView
                    android:id="@+id/ic_service_pagofacil"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_pagofacil" />

                <ImageView
                    android:id="@+id/ic_service_cobroexpress"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_cobro_express" />

                <ImageView
                    android:id="@+id/ic_service_rapipago"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_rapipago" />

                <ImageView
                    android:id="@+id/ic_service_directvprepago"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_directv" />

                <ImageView
                    android:id="@+id/ic_service_impresion"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_impresion" />

                <ImageView
                    android:id="@+id/ic_service_delivery"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_delivery" />

                <ImageView
                    android:id="@+id/ic_service_deliverypizza"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_deliverypizza" />

                <ImageView
                    android:id="@+id/ic_service_wifi"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_wifi" />

                <ImageView
                    android:id="@+id/ic_tarjeta_credito"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_service_tarjeta_credito" />

                <ImageView
                    android:id="@+id/ic_service_restaurant"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_service_restaurant" />

            </LinearLayout>
        </HorizontalScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColorHint="@color/textColorSecundario">

            <EditText
                android:id="@+id/editText_title_serv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/titulo"
                android:inputType="textPersonName"
                android:textColor="@color/textColorSecundario"
                android:textSize="24sp"></EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textColorHint="@color/textColorSecundario">

            <EditText
                android:id="@+id/editText_descripciom_serv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/descripcion_opcional"
                android:textColor="@color/textColorSecundario"
                android:textColorHint="@color/textColorSecundario"
                android:textSize="20sp"></EditText>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinealLayout_button_acept_servicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:onClick="Button_Add"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_load"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            app:lottie_autoPlay="true"
            app:lottie_fileName="anim_tick.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="false" />

        <TextView
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:text="@string/agregar"
            android:textAllCaps="true"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
