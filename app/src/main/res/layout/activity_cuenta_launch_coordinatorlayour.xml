<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".interface_principal.MainActivity_interface_principal">

    <include
        android:id="@+id/include_Negocio"
        layout="@layout/activity_cuenta_lauch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_floating_crear_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/color_verde"
        app:layout_anchor="@+id/include_Negocio"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@mipmap/ic_add1" />

    <ImageView
        android:id="@+id/imageView_fondo_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="6dp"
        app:layout_anchor="@+id/include_Negocio"
        app:layout_anchorGravity="left|center"
        app:srcCompat="@mipmap/img_signo_int" />

    <TextView
        android:id="@+id/textView_no_ahi_cuentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_tienes_ninguna_cuenta_creada"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textColorSecundario"
        android:textSize="18sp"
        app:layout_anchor="@+id/imageView_fondo_img"
        app:layout_anchorGravity="top|center" />


</android.support.design.widget.CoordinatorLayout>