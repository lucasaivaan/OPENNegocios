<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="2dp"
        android:orientation="horizontal">>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_perfilcliente"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_user2"
            app:civ_border_color="#f5f5f5"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clientes"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimario"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:text="@string/telefono"
                android:textColor="@color/textColorSecundario" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_noti_nuevo_mensaje2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_message" />

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blanco_gris" />


</LinearLayout>