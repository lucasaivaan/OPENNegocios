<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.open.applic.open.interface_principal.nav_header.perfil_negocio.Nav_header_perfil">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="1dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="1dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:elevation="2dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@mipmap/img_banner_perfil"
                            android:elevation="0dp" />
                    </android.support.design.widget.CoordinatorLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Informacion_del_negocio"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <View
                            android:id="@+id/view_separador"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/nav_imagen_perfil"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="5dp"
                                android:adjustViewBounds="false"
                                android:cropToPadding="false"
                                android:elevation="2dp"
                                android:src="@mipmap/logo_kiosco"
                                app:civ_border_color="#ffffff"
                                app:civ_border_width="4dp"
                                app:layout_anchor="@+id/imageView18"
                                app:layout_anchorGravity="left|bottom" />


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/ic_launcher_background"
                                app:hintTextAppearance="@style/test_appearance">

                                <EditText
                                    android:id="@+id/eProfile_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@color/cardview_light_background"
                                    android:hint="@string/nombre_comercial"
                                    android:textColor="@color/textColorSecundario"
                                    android:textSize="24sp"></EditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/view_separador7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_1d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/ic_launcher_background"
                            app:hintTextAppearance="@style/test_appearance">

                            <EditText
                                android:id="@+id/eProfile_descripcion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/descripcion"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_categoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_categoria"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/categoria"
                                android:textColor="@color/textColorSecundario"
                                android:textColorLink="@color/colorAccent"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador9"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:id="@+id/LinealLayout_categoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/categoria"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/button_categoria1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/md_deep_purple_300"
                                android:onClick="Button_SelectCategoria"
                                android:text="@string/categoria"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_telefono"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/telefono_principal"
                                android:inputType="number"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_sitio_web"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/sitio_web"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador11"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:id="@+id/button_cock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/button7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="ButtonConfigHors"
                                android:text="@string/configurar_horario"

                                android:textColor="@color/colorPrimary"
                                android:textSize="24sp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/img_banner_ubicacion"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/ubicacion"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view_separador12"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/pais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_Pais"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/pais_region"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador13"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:id="@+id/spinner_pais"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/pais_region"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="12sp" />

                            <Spinner
                                android:id="@+id/spinner_profile_pais"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawSelectorOnTop="true"
                                android:entries="@array/paises"
                                android:spinnerMode="dialog" />
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/provincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_provincia"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/provincia"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador14"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:id="@+id/spinner_provincia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/provincia"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="12sp" />

                            <Spinner
                                android:id="@+id/spinner_profile_provincia"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:drawSelectorOnTop="true"
                                android:entries="@array/provincias"
                                android:spinnerMode="dialog" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view_separador15"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ciudad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_ciudad"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/ciudad"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador16"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/direccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_direccion"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/direccion"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:id="@+id/view_separador17"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/md_grey_200" />


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/codigo_postal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/eProfile_code_postal"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/cardview_light_background"
                                android:hint="@string/codigo_postal"
                                android:textColor="@color/textColorSecundario"
                                android:textSize="24sp"></EditText>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button_edit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/md_orange_300"
                android:onClick="Button_Edit"
                android:text="@string/editar"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/md_green_300"
                android:onClick="Button_Update"
                android:text="@string/actualizar"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>

